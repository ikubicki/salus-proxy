{
  "name": "salus-proxy",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --watch src src/index.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "cs": "prettier src --check",
    "cs:fix": "prettier src --write",
    "compile": "tsc -p .",
    "docker:build": "docker build --platform linux/amd64 -t irekk/salus-proxy:latest .",
    "docker:run": "docker run --rm -d --env-file .env --name salus-proxy -p 8080:8080 irekk/salus-proxy:latest && docker logs salus-proxy -f",
    "docker:publish": "docker push irekk/salus-proxy",
    "build": "yarn compile && yarn docker:build"
  },
  "author": "Irek Kubicki <github@ixdude.com>",
